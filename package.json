{
  "name": "express-typescript",
  "version": "1.0.0",
  "description": "An Express.js template with TypeScript, ESLint and Prettier",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "run:dev": "tsx --watch --env-file .env.development src/index.ts",
    "run:prod": "tsx --watch --env-file .env.production src/index.ts",
    "run:staging": "tsx --watch --env-file .env.staging src/index.ts",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Gabriel Drouin",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "imports": {
    "#*": "./src/*"
  },
  "packageManager": "pnpm@10.6.4",
  "dependencies": {
    "@libsql/client": "^0.15.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.1",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/eslint-plugin": "^1.1.38",
    "@vitest/ui": "3.0.9",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.22.0",
    "eslint-plugin-perfectionist": "^4.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
